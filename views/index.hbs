<div class="container mt-5"></div>

<div class=" row justify-content-between" id="search-bar">
  {{!-- search bar --}}
  <div class="col-4">
    <form action="/search">
      <div class="input-group mb-3">
        <input type="text" class="form-control" name="keyword" placeholder="請輸入餐廳名稱..." aria-label="Restaurant Name..."
          value="{{keyword}}">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="submit" id="search-button">搜尋</button>
        </div>
      </div>
    </form>
  </div>
  {{!-- dropdowns --}}
  <div class="dropdown">
    <a href="/restaurants/new" class="btn btn-outline-primary mr-2">新增餐廳</a>
    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      排列順序
      {{#if currentSelected}}{{currentSelected}} {{/if}}
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <a href="/sort/rating/desc" class="dropdown-item">評分:高至低</a>
      <a href="/sort/rating/asc" class="dropdown-item">評分:低至高</a>
      <a href="/sort/name/asc" class="dropdown-item">店名:A至Z</a>
      <a href="/sort/name/desc" class="dropdown-item">店名:Z至A</a>
      <a href="/" class="dropdown-item">預設順序</a>
    </div>
  </div>
</div>

<div class="row" id="data-panel">
  {{#each restaurants}}
  <div class="col-sm-3">
    <div class="card">
      <a href="restaurants/{{this._id}}">
        <div class="card">
          <img src="{{this.image}}" class="card-img-top border-bottom" alt="restaurant_photo">
          <div class="card-body">
            <h5 class="card-title font-weight-bold text-dark">{{this.name}}</h5>
            <p class="englich-name text-secondary">{{this.name_en}}</p>
      </a>
      <span class="badge" style=" background-color: #dbebfa">{{this.category}}</span>
      <span class=" badge badge-warning">{{this.rating}}</span>
    </div>
    <div class=" button-group mb-3 d-flex justify-content-center">
      <a href="/restaurants/{{ this._id }}" class="btn btn-outline-success mr-2">更多...</a>
      <a href="/restaurants/{{ this._id }}/edit" class="btn btn-outline-primary">修改</a>
      <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-outline-danger ml-2">刪除</button>
      </form>
    </div>

  </div>
</div>
</div>
{{/each}}
</div>
</div>