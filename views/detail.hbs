<!-- ./views/show.handlebars -->
<div class="container py-5">
  <a href="https://c.pxhere.com/photos/01/c4/photo-504676.jpg!d"></a>
  <div class="text-center">
    <h1 class="mb-4">{{restaurant.name}}</h1>
    <h3>{{restaurant.name_en}}</h3>
    <img class="rounded mb-4" src="{{restaurant.image}}" alt="Card image cap" style="max-height: 300px;">
  </div>
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">
      <p>類別: {{restaurant.category}}</p>
      <p>評分: {{restaurant.rating}}</p>
      <p>地址: {{restaurant.location}}</p>
      <p>電話: {{restaurant.phone}}</p>
      <p>Google Map: {{restaurant.google_map}}</p>
      <div class="restaurant-description">
        <h4>特色</h4>
        <div>{{restaurant.description}}</div>
        <a href="/restaurants/{{ restaurant._id }}/edit">修改資料</a>
        <a href="/">返回上一頁</a>
        <form action="/restaurants/{{ restaurant._id }}/delete" method="POST" style="display: inline;">
          <button type="submit">刪除</button>
        </form>
      </div>
    </div>
  </div>
</div>